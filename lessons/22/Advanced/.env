# .env

# --- Підмінити значення під себе ---

# PostgreSQL:
DB_DSN="queue_user:q12345@tcp(localhost:3306)/queue_app?parseTime=true"

# або для MySQL:
# DB_DSN="user:password@tcp(localhost:3306)/dbname?parseTime=true"

# 32 байти — обов’язково! Можеш згенерувати командою (дивись нижче)
CSRF_AUTH_KEY="32-byte-long-auth-key-012345678901"
SESSION_KEY="very-secret-session-key-32-bytes-min"

# Сертифікати (як у попередніх рівнях)
CERT_FILE="./server.crt"
KEY_FILE="./server.key"

# Порт для HTTPS
PORT="4430"
